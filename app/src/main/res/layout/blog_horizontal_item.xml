<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:padding="10dp"
    >
    
    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="197dp"
        app:cardCornerRadius="12dp"
        android:elevation="9dp"
        card_view:cardElevation="9dp"
        card_view:cardUseCompatPadding="true"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFA407">
                <ImageView
                    android:id="@+id/image_student"
                    android:layout_width="40dp"
                    android:layout_margin="10dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user_icon"
                    android:layout_alignParentLeft="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_name_student"
                        android:layout_marginTop="10dp"
                        android:text="Diana Patricia Rojas - 3 dias"
                        android:textSize="13dp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/comentario_icon_w"/>
                        <TextView
                            android:id="@+id/txt_school_student"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="5dp"
                            android:layout_below="@id/txt_name_student"
                            android:text="5 comentarios"
                            android:textSize="12dp"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/key"
                            android:visibility="invisible"
                            android:layout_width="1dp"
                            android:layout_height="1dp"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_botton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="#FFA407">
                <TextView
                    android:id="@+id/txt_card_blog_horizontal_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    android:text="holaaa"
                    android:textColor="#ffffff"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>