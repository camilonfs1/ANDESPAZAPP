                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:elevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:padding="6dp"
                    android:gravity="center"
