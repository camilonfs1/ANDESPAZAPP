<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="430dp"
        app:srcCompat="@drawable/logo_sol"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="-88dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/btn_inter"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="101dp"
        android:background="@drawable/input_login">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Email"
            android:shadowColor="#4dac9d"
            android:textColor="#4dac9d"
            android:textColorHighlight="#4dac9d"
            android:textColorHint="#4dac9d"
            android:textColorLink="#4dac9d" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/btn_inter"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/input_login">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Clave"
            android:shadowColor="#4dac9d"
            android:textColor="#4dac9d"
            android:textColorHighlight="#4dac9d"
            android:inputType="textPassword"
            android:textColorHint="#4dac9d"
            android:textColorLink="#4dac9d" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtInternetConection1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conexion a internet ok"
        android:textColor="#4dac9d"
        android:visibility="visible"
        android:textSize="20dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/btn_inter"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="135dp"
        android:background="@drawable/boton_main"
        android:text="Ingresar"
        android:textColor="#ffff"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="629dp" />



    <TextView
        android:id="@+id/txt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginLeft="101dp"
        android:layout_marginEnd="101dp"
        android:layout_marginRight="101dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text="@string/ul_new_user"
        android:textColor="#4dac9d" />
</RelativeLayout>